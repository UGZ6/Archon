# --------------------------------------------------------------------
# A. n8n Core & Database Settings
# --------------------------------------------------------------------
# -- n8n General Settings --
N8N_VERSION=latest # IMPORTANT: Pinned to a specific version for stability
N8N_HOST=
N8N_PROTOCOL=https # Set this to https as you are using a reverse proxy
WEBHOOK_URL=https://your.domain # Note: For production, this should be the public URL
N8N_EDITOR_BASE_URL=https://your.domain # Note: For production, this should be the public URL
N8N_ENCRYPTION_KEY= # The new, secure key
NODE_ENV=production
GENERIC_TIMEZONE=America/New_York
N8N_TRUSTED_PROXIES= # Fixes X-Forwarded-For issue with reverse proxies
##N8N_TEMPLATES_ENABLED=true

# -- PostgreSQL Database --
POSTGRES_USER=root
POSTGRES_PASSWORD= # The new, strong password
POSTGRES_DB=n8n

# -- gamez database - postgres service --
PGUSER_GAMEZ=postgres
PGPASSWORD_GAMEZ=
PGHOST_GAMEZ=gamez-dbb-postgresql.ns-rs63c2e5.svc
PGPORT_GAMEZ=5432
PGDATABASE_GAMEZ=gamez-dbb

# Redis Env
REDIS_PORT=6379
REDIS_USER=admin
REDIS_PASSWORD=
REDIS_HOST=redis

# -- n8n Feature Flags --
N8N_DEFAULT_BINARY_DATA_MODE=filesystem
N8N_RUNNERS_ENABLED=true
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true
N8N_COMMUNITY_PACKAGES_ALLOW_TOOL_USAGE=true
N8N_BLOCK_ENV_ACCESS_IN_NODE=false # IMPORTANT: Allows {{ $env. }} to work in future n8n versions
N8N_API_KEY=

